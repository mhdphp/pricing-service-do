{% extends "base.jinja2" %}

{% block content %}

    <div class="page-header">
        <h1>
            Store <small>{{ store.name }}</small>
        </h1>
        <p>All URL's in this store should start with
            <strong>{{ store.url_prefix }}</strong>
        </p>
    </div>

    <!-- Only administrators, with emails in config.py, ADMINS, are able to see these buttons -->
    {% if session['email'] in config.ADMINS %}
        <div class="panel panel-default">
            <a href="{{ url_for('stores.edit_store', store_id=store._id) }}"
               class="btn btn-warning" role="button"> Edit Store
            </a>
            <a href="{{ url_for('stores.delete_store', store_id=store._id) }}"
               class="btn btn-danger" role="button"> Delete Permanently Store
            </a>
        </div>
    {% endif %}

{% endblock %}

