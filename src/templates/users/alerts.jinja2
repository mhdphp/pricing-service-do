{% extends "base.jinja2" %}

{% block content %}

    <div class="page-header">
        <h2>Alerts <small> --- showing already existing alerts</small></h2>
    </div>
    <div class="list-group">
        {% for alert in alerts %}
            <a href="{{ url_for('alerts.get_alert', alert_id=alert._id) }}" class="list-group-item">
                <h4 class="list-group-item-header">Alert for <strong>{{ alert.item.name }}</strong></h4>
                <br class="list-group-item-text">
                Last price found <strong>&pound{{ alert.item.price }}</strong> </br>
                Last checked on
                <strong>
                    {{ alert.last_checked.strftime("%d-%m-%Y at %H:%M:%S ") }}
                </strong>
                </p>
            </a>
        {% endfor %}
    </div>
    <a href="{{ url_for('alerts.create_alert') }}" class="btn btn-success">
        <span class="glyphicon glyphicon-plus"></span>
        Create new
    </a>

{% endblock %}