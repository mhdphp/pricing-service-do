{% extends "base.jinja2" %}

{% block content %}

    <div class="page-header">
        <h2>Create Alert</h2>
    </div>

    <div class="form-size">
        <form method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" placeholder="Name" class="form-control">
            </div>
           <div class="form-group">
                <label for="url">URL</label>
                <input type="text" id="url" name="url" placeholder="http://..." class="form-control">
            </div>
           <div class="form-group">
                <label for="price_limit">Price Limit</label>
                <input type="text" id="price_limit" name="price_limit" placeholder="45.0"
                       class="form-control" aria-describedby="priceLimitBlock">
               <p id="priceLimitBlock">
                   We'll send you an email when the price reaches or it is below price limit
               </p>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>

        </form>
    </div>

{% endblock %}