{% extends "base.jinja2" %}

{% block content %}

    <div class="page-header">
        <h2>
            Alert for
            <small>{{ alert.item.name }}</small>
        </h2>
    </div>
    <p>
        Last price found:
        <strong>{{ alert.item.price }}</strong>
    </p>
    <p>
        Last checked on:
        <strong>{{ alert.last_checked.strftime("%d-%m-%Y at %H:%M:%S ") }}</strong>
    </p>

    <div class="panel panel-default">
        <div class="panel-body">
            <a href="{{ alert.item.url }}" class="btn btn-default" role="button">Visit Site</a>
            {% if alert.active %}
                <a href="{{ url_for('alerts.deactivate_alert', alert_id=alert._id) }}"
                   class="btn btn-danger" role="button">Deactivate Alert</a>
            {% else %}
                <a href="{{ url_for('alerts.activate_alert', alert_id=alert._id) }}"
                   class="btn btn-success" role="button">Activate Alert</a>
            {% endif %}
            <a href="{{ url_for('alerts.check_alert_price', alert_id=alert._id) }}"
               class="btn btn-warning" role="button">Check Alert Price</a>
        </div>
    </div>

{% endblock %}
